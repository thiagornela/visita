<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_adicionar_visita"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="V"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_adicionar_Colaborador"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_adicionar_visita"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_adicionar_unidade"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="U"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_adicionar_Colaborador"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_adicionar_ComoNosConheceu"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_adicionar_unidade"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_adicionar_Secretaria"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Se"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_adicionar_ComoNosConheceu"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_adicionar_Situacao"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Si"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_adicionar_Secretaria"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_adicionar_Tipo_Atendimento"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Ti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_adicionar_Situacao"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_adicionar_Turma"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Tu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_adicionar_Tipo_Atendimento"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_adicionar_Turno"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Tu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_adicionar_Turma"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lista_visitas_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_editar"
        tools:listitem="@layout/item_visita" />

</androidx.constraintlayout.widget.ConstraintLayout>